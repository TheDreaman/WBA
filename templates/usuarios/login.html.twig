{% extends 'open.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<div class="container-fluid">    
{% if error %}
    {{ error.messagekey|trans(error.messageData, 'security') }}
{% endif %}

    <div class="card mb-3 mx-auto bg-success position-absolute top-50 start-50 translate-middle" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ asset('assets/images/esime.png') }}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1 class="card-title">LOGIN</h1>

                    <form action="{{ path('login') }}" method="POST">
                        <label for="username">Email</label>
                        <input type="email" id="username" name="_username" value="{{ last_username }}"/>

                        <div class="clearfix"></div>

                        <label for="password">Contrase√±a</label>
                        <input type="password" id="password" name="_password"/>

                        <div class="clearfix"></div>

                        <input type="submit" value="Entrar">
                    </form>

                    <a href="{{ path('registro') }}" class="btn-dark clearfix">Registrarse</a>

                    {# <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> #}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
